<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.virtusa.vravenew"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.virtusa.vravenew.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.virtusa.vravenew.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" 
            android:theme="@style/NoActionBar">
        </activity>
        <activity
            android:name="com.virtusa.vravenew.VRaveMainActivity"
            android:label="@string/title_activity_vrave_main"
            android:screenOrientation="portrait" 
            android:theme="@style/NoActionBar">
        </activity>
        <activity
            android:name="com.virtusa.vravenew.AddNewRaveActivity"
            android:label="@string/title_activity_add_new_rave"
            android:screenOrientation="portrait" 
            android:theme="@style/NoActionBar">
        </activity>
    </application>

</manifest>